
.content {
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	    -ms-flex: 1;
	        flex: 1;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	    -ms-flex-direction: column;
	        flex-direction: column;
	background-color: #efeff4;
	padding: 20rpx;
}
.input-group {
	background-color: #ffffff;
	margin-top: 40rpx;
	position: relative;
}
.input-row {
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	position: relative;
	font-size: 30rpx;
	width: 100%;
}
.input-row .title {
	width: 20%;
	height: 50rpx;
	min-height: 50rpx;
	padding: 15rpx 0;
	padding-left: 30rpx;
	line-height: 50rpx;
}
.input-row ._input {
	width: 80%;
	height: 50rpx;
	min-height: 50rpx;
	display: block;
	margin: 0;
	padding: 15rpx 0;
	line-height: 50rpx;
}
.btn-row {
	margin-top: 50rpx;
	padding: 20rpx;
}
.action-row {
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	    -ms-flex-direction: row;
	        flex-direction: row;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	    -ms-flex-pack: center;
	        justify-content: center;
	margin-top: 20rpx;
}
.action-row text {
	color: #007aff;
	padding: 0 20rpx;
	font-size: 30rpx;
}

